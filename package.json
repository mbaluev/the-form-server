{
  "name": "the-form-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "create": "npx prisma db push",
    "start": "npx prisma generate && node src/index.js",
    "init": "npx prisma migrate dev --name init",
    "update": "npx prisma migrate dev --name update",
    "deploy": "npx prisma migrate deploy",
    "docker:clear:images": "docker rmi -f $(docker images -a -q)",
    "docker:clear:containers": "docker rm -f $(docker ps -qa)",
    "docker:clear": "npm run docker:clear:images && npm run docker:clear:containers",
    "docker:run": "docker build -t the-form-server . && docker run --env-file .env.production -dp 127.0.0.1:8081:8081 the-form-server",
    "docker:build": "npm run docker:clear && npm run docker:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbaluev/the-form-server.git"
  },
  "author": "mbaluev",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.14.1",
    "@quixo3/prisma-session-store": "^3.1.11",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "object-path": "^0.11.8",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^4.14.1",
    "uuid": "^9.0.0"
  }
}
